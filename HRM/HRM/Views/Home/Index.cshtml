@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" style="align-content: center">
    <h1 style="text-align: center">HRM-Training</h1>

</div>



<div>

    <h3 style="text-align:center; text-decoration: underline;">Department</h3>
    <table id="department" class="table-bordered" style="width:100%; text-align:center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Department Code</th>
                <th>Department Name</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in ViewBag.Departments)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.DepartmentCode</td>
                    <td>@item.DepartmentName</td>
                </tr>
            }

        </tbody>
    </table>

    <h3 style="text-align:center; text-decoration: underline;">Division</h3>
    <table id="Division" class="table-bordered" style="width:100%; text-align:center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Division Code</th>
                <th>Division Name</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in ViewBag.Divisions)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.DivisionCode</td>
                    <td>@item.Name</td>
                </tr>
            }

        </tbody>
    </table>

    <h3 style="text-align:center; text-decoration: underline;">Designation</h3>
    <table id="Designation" class="table-bordered" style="width:100%; text-align:center">
        <thead>
            <tr>
                <th>id</th>
                <th>Short Name</th>
                <th>Designation Name</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in ViewBag.Designations)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.ShortName</td>
                    <td>@item.DesignationName</td>
                </tr>
            }

        </tbody>
    </table>

    <h3 style="text-align:center; text-decoration: underline;">Section</h3>
    <table id="Section" class="table-bordered" style="width:100%; text-align:center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Section Code</th>
                <th>Section Name</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in ViewBag.Sections)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.SectionCode</td>
                    <td>@item.SectionName</td>
                </tr>
            }

        </tbody>
    </table>

    <h3 style="text-align:center; text-decoration: underline;">Employee</h3>
    <table id="Employee" class="table-bordered" style="width:100%; text-align:center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Employee Code</th>
                <th>Full Name</th>
                <th>Father Name</th>
                <th>Mother Name</th>
                <th>Nick Name</th>
                <th>Designation</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in ViewBag.Employees)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.EmployeeCode</td>
                    <td>@item.FullName</td>
                    <td>@item.FatherName</td>
                    <td>@item.MotherName</td>
                    <td>@item.NickName</td>
                    <td>@item.Designations.DesignationName</td>

                </tr>
            }

        </tbody>
    </table>


</div>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {


            $("#department").DataTable();
            $("#Division").DataTable();
            $("#Designation").DataTable();
            $("#Section").DataTable();
            $("#Employee").DataTable();
           

        });
    </script>
}